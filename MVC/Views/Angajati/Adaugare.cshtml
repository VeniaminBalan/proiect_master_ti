@using MVC.Controllers
@model CreateAngajatViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adaugare Angajat</h2>

<form asp-action="@nameof(AngajatiController.Adaugare)" method="post">
    <div class="form-group">
        <label asp-for="Nume"></label>
        <input asp-for="Nume" class="form-control" />
        <span asp-validation-for="Nume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prenume"></label>
        <input asp-for="Prenume" class="form-control" />
        <span asp-validation-for="Prenume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Functie"></label>
        <input asp-for="Functie" class="form-control" />
        <span asp-validation-for="Functie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SalarBaza"></label>
        <input asp-for="SalarBaza" class="form-control" />
        <span asp-validation-for="SalarBaza" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SporProcentual"></label>
        <input asp-for="SporProcentual" class="form-control" />
        <span asp-validation-for="SporProcentual" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PremiiBrute"></label>
        <input asp-for="PremiiBrute" class="form-control" />
        <span asp-validation-for="PremiiBrute" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Retineri"></label>
        <input asp-for="Retineri" class="form-control" />
        <span asp-validation-for="Retineri" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvează</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}